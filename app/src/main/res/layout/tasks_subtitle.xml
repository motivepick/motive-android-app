<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="@string/subtitle_tasks_section"
        android:id="@+id/number_of_tasks" android:layout_width="0dp" android:textAllCaps="true"
        android:layout_weight="48" android:layout_height="match_parent"
        android:textSize="18sp" android:textColor="@color/colorGrey" android:textStyle="bold" android:gravity="center_vertical"/>
    <Button
        android:text="@string/button_show_closed_tasks"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/button2" android:layout_weight="0" android:textColor="@color/colorPrimary" android:minHeight="36dp"/>
</LinearLayout>