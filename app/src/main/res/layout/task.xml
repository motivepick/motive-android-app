<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:layout_width="38dp"
        android:layout_height="38dp" app:srcCompat="@android:drawable/checkbox_off_background" android:id="@+id/closeTaskBtn"
        android:adjustViewBounds="false"/>
    <TextView
        android:layout_width="0dp"
        android:id="@+id/item_text" android:layout_weight="48" android:layout_height="wrap_content" android:gravity="start|center_vertical"
        android:textSize="21sp" android:minHeight="38dp"/>
</LinearLayout>