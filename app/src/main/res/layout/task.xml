<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:layout_width="38dp"
        android:layout_height="match_parent" app:srcCompat="@android:drawable/radiobutton_off_background" android:id="@+id/closeTaskBtn"
        android:adjustViewBounds="false" android:background="@android:color/transparent" android:paddingRight="12dp"/>
    <TextView
        android:layout_width="0dp"
        android:id="@+id/item_text" android:layout_weight="48" android:layout_height="wrap_content" android:gravity="start|center_vertical"
        android:textSize="21sp" android:minHeight="64dp" android:textColor="@android:color/black"/>
</LinearLayout>